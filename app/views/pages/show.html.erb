<% content_for :head do -%>
<% javascript_tag do -%>
if ( typeof(translatables) == 'undefined' ){
	var translatables = [];
}
tmp = {
	tag_id: 'page',
	locales: {}
};
<% %w( en es ).each do |locale| -%>
tmp.locales["<%=locale%>"]="<%=URI.encode(sanitize(textilize(@page.body(locale))))-%>"
<% end -%>
translatables.push(tmp);
<% end -%>
<% end -%>

<div id='page'>
<%# if @page %>
<%#= sanitize(textilize(@page.body(session[:locale]))) %>
<%# end %>
</div>
